{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "dist/cjs",
    "declaration": true,
    "noEmit": false,
    "verbatimModuleSyntax": false
  },
  "exclude": ["**/*.test.ts", "dist", "node_modules"]
}
